version: "3.2"
services:
    db:
        container_name: mysql
        restart: unless-stopped
        image: mysql:8.0.23
        command: --default-authentication-plugin=mysql_native_password
        environment: 
            MYSQL_ROOT_PASSWORD: root
        ports:
            - 3306:3306
        volumes:
            - ./mysql-data:/var/lib/mysql
        networks:
            - nginx-network
    nginx:
        container_name: nginx
        restart: unless-stopped
        image: nginx:1.17.8
        ports:
            - 80:80
        volumes:
            - ./config/nginx/:/etc/nginx/conf.d/
            - ./www:/usr/www
        networks:
            - nginx-network
        deploy:
            resources:
                limits:
                    memory: 512M
                    cpus: 0.5
                reservations:
                    memory: 64M
    portainer:
        container_name: portainer
        restart: unless-stopped
        image: portainer/portainer-ce
        volumes:
            - /var/run/docker.sock:/var/run/docker.sock
            - ./portainer_data:/data
        networks:
            - nginx-network
    app:
        container_name: app
        restart: unless-stopped
        image: juliocsrmf/php8-mongodb-driver
        volumes:
            - ./www/app:/usr/www/app
            - ./config/php/app/custom.ini:/usr/local/etc/php/conf.d/custom.ini
            - ./config/crontabs/app:/etc/crontabs/root # Use this for enable your custom cronwork
        working_dir: /usr/www/app
        deploy:
            resources:
                limits:
                    memory: 128M
                    cpus: 0.01
                reservations:
                    memory: 64M
        networks:
            - nginx-network
networks:
    nginx-network:
        driver: bridge
        name: nginx-network
